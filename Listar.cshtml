@model IEnumerable<AccentureMovie.Models.Movie>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Listar</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <header class="jumbotron text-center">
        <h1>Listado de peliculas</h1>
    </header>
    <main class="container">
            @Html.ActionLink(" ", "Agregar", null, new {
            @class = "glyphicon glyphicon-plus",
            style = "font-size:1.5em"
            })
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Titulo</th>
                    <th>Fecha Release</th>
                    <th>Duracion</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in this.Model)
                {
                    <tr>
                        <td>@p.Title</td>
                        <td>@p.ReleaseDate.ToShortDateString()</td>
                        <td>@p.runningTime</td>
                        <td>
                            @Html.ActionLink(" ", "Editar", new { id=p.id }, new {
                           @class = "glyphicon glyphicon-pencil",
                           style = "font-size:1.5em"
                       })

                            @Html.ActionLink(" ", "Eliminar", new { id = p.id }, new {
                           @class = "glyphicon glyphicon-trash",
                           style = "font-size:1.5em"
                       })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </main>

</body>
</html>
